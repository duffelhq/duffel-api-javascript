{
  "compilerOptions": {
    "target": "esnext",
    "module": "ESNext",
    "lib": [
      "es2020"
    ],
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "src",
    "isolatedModules": true,
    "strict": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "typeRoots": [
      "node_modules/@types",
      "node_modules/**/types",
      "src/types"
    ],
    "types": [
      "jest",
      "node"
    ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationDir": "dist",
    "paths": {
      "types": [
        "./types/"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "examples",
    "jest.config.ts",
    "**/*.spec.ts",
    "**/mock*.ts"
  ],
  "include": [
    "**/*.ts",
    "**/*.d.ts",
    "**/*.tsx"
  ]
}